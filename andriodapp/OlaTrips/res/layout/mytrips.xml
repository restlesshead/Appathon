<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/headerLayout"
        android:background="#D7E025"
        android:transitionName="sources" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginLeft="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/olahero" >
        </ImageView>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <TextView
        android:id="@+id/myTrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:background="#000000"
        android:padding="5dp"
        android:text="MY TRIPS"
        android:textColor="#D4D828"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/myTripsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTrips" >

        <RelativeLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                 android:transitionName="slide"
                android:src="@drawable/img_big" />

            <RelativeLayout
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=">"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/avatar"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/avatar"
                android:text="name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/numberofPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar"
                android:paddingLeft="5dp"
                android:text="+2"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberofPeople"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar"
                android:paddingLeft="5dp"
                android:text="Status: Accepted"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/item1"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#9000" />

        <RelativeLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item1"
            android:paddingBottom="10dp" >

            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:scaleType="fitXY"
                 android:transitionName="slide"
                android:src="@drawable/img_big" />

            <RelativeLayout
                android:id="@+id/cancel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/select2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=">"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/avatar2"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/avatar2"
                android:text="name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/numberofPeople2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar2"
                android:paddingLeft="5dp"
                android:text="+2"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberofPeople2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar2"
                android:paddingLeft="5dp"
                android:text="Status: Accepted"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/item2"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#9000" />

        <RelativeLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item2"
            android:paddingBottom="10dp" >

            <ImageView
                android:id="@+id/avatar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:scaleType="fitXY"
                 android:transitionName="slide"
                android:src="@drawable/img_big" />

            <RelativeLayout
                android:id="@+id/cancel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/select3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=">"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/avatar3"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/avatar3"
                android:text="name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/numberofPeople3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name3"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar3"
                android:paddingLeft="5dp"
                android:text="+2"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/status3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberofPeople3"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar3"
                android:paddingLeft="5dp"
                android:text="Status: Accepted"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/item3"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#9000" />
    </RelativeLayout>

</RelativeLayout>