<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        android:paddingTop="20dp" >

        <RelativeLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#121212"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/image"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/profileimage" />

            <TextView
                android:id="@+id/name"
                style="@style/lightGreyText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:paddingTop="5dp"
                android:text="Ankit Bhati" />

            <TextView
                style="@style/lightGreySmallText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/image"
                android:paddingTop="5dp"
                android:text="8988363273" />

            <TextView
                style="@style/lightGreyText24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text=">" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/userInfo"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/icon_taxi"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/taxi" />

            <TextView
                android:id="@+id/text_taxi"
                style="@style/lightGreyText14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_taxi"
                android:layout_alignTop="@+id/icon_taxi"
                android:layout_toRightOf="@+id/icon_taxi"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Plan a trip" />

            <View
                style="@style/thinGreyLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/text_taxi"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/layout"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/icon_rides"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/steering_wheel" />

            <TextView
                android:id="@+id/text_rides"
                style="@style/lightGreyText16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_rides"
                android:layout_alignTop="@+id/icon_rides"
                android:layout_toRightOf="@+id/icon_rides"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="My Trips" />

            <View
                style="@style/thinGreyLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/text_rides"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/icon_invitations"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/letter_closed" />

            <TextView
                android:id="@+id/text_invitations"
                style="@style/lightGreyText16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_invitations"
                android:layout_alignTop="@+id/icon_invitations"
                android:layout_toRightOf="@+id/icon_invitations"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Trip Invitations" />

            <View
                style="@style/thinGreyLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/text_invitations"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/icon_olamoney"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/wallet" />

            <TextView
                android:id="@+id/text_olamoney"
                style="@style/lightGreyText16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_olamoney"
                android:layout_alignTop="@+id/icon_olamoney"
                android:layout_toRightOf="@+id/icon_olamoney"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Ola Money" />

            <View
                style="@style/thinGreyLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/text_olamoney"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
    </RelativeLayout>