<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:ignore="UnknownIdInLayout,HardcodedText" >

    <RelativeLayout
        android:id="@+id/ridebg"
        android:layout_width="match_parent"
        android:background="@drawable/callout"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:transitionName="move"
            android:src="@drawable/img_big"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/avatar"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_delete"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/avatar"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="name"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/numberofPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/avatar"
            android:paddingLeft="5dp"
            android:text="+2"
            android:textColor="#000000"
            android:textSize="14sp" />
        
         <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberofPeople"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/avatar"
            android:paddingLeft="5dp"
            android:text="Status: Accepted"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>